<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap.css")
    @Styles.Render("~/Content/github.css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.js")
</head>
<body>

	<div class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				@Html.ActionLink("LOGO", "Index", "Home",null, new { @class = "navbar-brand" })
			</div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("题库", "Index", "Problem")</li>
                    <li>@Html.ActionLink("提交", "Index", "Submit")</li>
				</ul>
                @Html.Partial("_LoginPartial")
			</div>
			
		</div>
	</div>
	
    <div class="container">
        @RenderBody()
    </div>
	
    <footer class="footer ">
        <div class="container">
            <div class="row">
                <p class="list-inline text-center">&copy; @DateTime.Now.Year - 我的 ASP.NET MVC 应用程序</p>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
